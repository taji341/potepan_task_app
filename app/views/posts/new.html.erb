
<div class="main_container">
  <div class="information">
    <h2>スケジュール新規作成</h2>
      <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
      <% end %>
  </div>
  <%= render "shared/partial", obj: @post %>
  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td><%= f.check_box :all_day %><br>
        終日の場合はチェックを入れます</td>
      </tr>
      <tr>
        <th><%= f.label :post_memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :post_memo %></td>
      </tr>
    </table>
    <div>
      <ul>
        <li><%= f.submit "スケジュールを新規登録する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", "/posts" %></li>
      </ul>
    </div>
  <% end %>
</div>
<footer>
  <h1>現在の日時 : <%= Time.now.strftime("%Y年%-m月%-d日 %-H時%-M分%-S秒") %>
  </h1>
</footer>